<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<% @products.each do |product| %>
<div class="entry">
	<div><%= image_tag(product.image_url) %></div>
	<h2 class="description"><%= product.name %></h2>
	<h3 class="description"><%= product.birthday %></h3>
	<h4 class="description"><%= sanitize(product.poem) %></h4>
	<div class="price_line">
		<span class="price"><%= number_to_currency(product.price) %>
			<%= button_to 'Add to Cart', line_items_path(product_id: product),
			remote: true, id: 'submit' %>
		</span>
	</div>
</div>
<% end %>
<%= will_paginate @products %>